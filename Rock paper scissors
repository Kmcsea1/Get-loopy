import java.util.Scanner;

class RockPaperScissors {
    static String getPlayerMove(String playerName) {
        Scanner scanner = new Scanner(System.in);
        String move;

        // Loop until a valid move is entered
        while (true) {
            System.out.print(playerName + ", enter your move (R, P, S): ");
            move = scanner.nextLine().toUpperCase(); // Convert to uppercase

            if (move.equals("R") || move.equals("P") || move.equals("S")) {
                break; // Exit loop if a valid move is entered
            } else {
                System.out.println("Invalid move! Please enter R, P, or S.");
            }
        }

        return move; // Return the valid move
    }

    static String determineWinner(String moveA, String moveB) {
        if (moveA.equals(moveB)) {
            return "It's a Tie!";
        } else if ((moveA.equals("R") && moveB.equals("S")) ||
                (moveA.equals("P") && moveB.equals("R")) ||
                (moveA.equals("S") && moveB.equals("P"))) {
            return "Player A wins!";
        } else {
            return "Player B wins!";
        }
    }

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        String playAgain;

        do {
            String playerAMove = getPlayerMove("Player A");
            String playerBMove = getPlayerMove("Player B");

            // Display moves
            System.out.println("Player A chose: " + playerAMove);
            System.out.println("Player B chose: " + playerBMove);

            // Determine and display the winner
            String result = determineWinner(playerAMove, playerBMove);
            System.out.println(result);

            // Ask if players want to play again
            System.out.print("Do you want to play again? (Y/N): ");
            playAgain = scanner.nextLine().toUpperCase(); // Convert to uppercase
        } while (playAgain.equals("Y")); // Continue if the user wants to play again

        System.out.println("Thanks for playing!"); // Exit message
        scanner.close(); // Close the scanner
    }
}
